{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
  },
  "include": ["src/**/*"]
}
